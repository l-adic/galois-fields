#!/usr/bin/env bash
set -e
if [[ ! -d "/home/martin/code/torsion/galois-fields" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/martin/code/torsion/galois-fields")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/martin/code/torsion/galois-fields" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/martin/code/torsion/galois-fields/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/martin/code/torsion/galois-fields/.envrc" "/home/martin/code/torsion/galois-fields/.direnv"/*.rc
